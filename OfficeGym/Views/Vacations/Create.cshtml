@model OfficeGym.Models.Vacation

@{
    ViewData["Title"] = "New vacation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New</h1>

<h4>Vacation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeesSelectList"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="VacationDescription" class="control-label"></label>
                <input asp-for="VacationDescription" class="form-control" />
                <span asp-validation-for="VacationDescription" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="AboutVacation" class="control-label"></label>
                <input asp-for="AboutVacation" class="form-control" />
                <span asp-validation-for="AboutVacation" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FunVacationCount" class="control-label"></label>
                <input asp-for="FunVacationCount" class="form-control" />
                <span asp-validation-for="FunVacationCount" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-primary">Back</a>
                <input type="submit" value="Save" class="btn btn-primary ms-2" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}